{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "notes": {
          "$noteId": {
						".validate": "$noteId.beginsWith('-') && newData.hasChildren(['text', 'lastModified'])",
            "lastModified": {
              ".validate": "newData.isNumber()"
            },
            "tags": {
              "$tagIndex": {
                ".validate": "newData.isString() && newData.val().beginsWith('#')"
              }
            },
            ".write": false
          }
        }
      }
    }
  }
}
